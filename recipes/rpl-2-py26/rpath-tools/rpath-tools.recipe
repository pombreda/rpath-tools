class Ractivate(PackageRecipe):
    name = 'rpath-tools'
    version = '2.1'

    buildRequires = [
        'make:runtime',
        'python:devel',
        'pywbem:python',
        'rpath-models:python',
        'rpm:python',
        'util-linux:runtime',
        'smartform:python',
        'xml_resources:data',
    ]

    def setup(r):
        r.addMercurialSnapshot()
        r.MakeDirs('%(datadir)s/rpath-tools/xml_resources')
        # Fix up xsd path
        r.Replace('/usr/conary/share/rpath-tools',
            '%(datadir)s/rpath-tools',
            'rpath_tools/client/sysdisco/configurators.py',
            'rpath_tools/client/sysdisco/executioner.py')

        r.Make()
        r.MakeInstall('LIB_ONLY=1')

        # Copy data from xml_resources
        r.Run('cp -a %(datadir)s/rpath_xml_resources/* %(destdir)s%(datadir)s/rpath-tools/xml_resources/')

        r.macros.pybin = '%(bindir)s/python%(pyver)s'
        r.NormalizePythonInterpreterVersion(
            versionMap=(('/usr/bin/python', '%(pybin)s'),
                        ('python', '%(pybin)s'),
                        ('/usr/bin/python2.4', '%(pybin)s'),
                        ('/usr/bin/python2.5', '%(pybin)s'),
                        ('/usr/bin/python2.6', '%(pybin)s'),
                        ('/usr/conary/bin/python2.6', '%(pybin)s'),
                        ))
