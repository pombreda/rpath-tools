class Ractivate(PackageRecipe):
    name = 'rpath-tools'
    version = '2.1'

    buildRequires = [
        'make:runtime',
        'python:devel',
        'pywbem:python',
        'rpath-models:python',
        'rpm:python',
        'util-linux:runtime',
    ]

    def setup(r):
        r.addMercurialSnapshot()
        r.Make()
        r.MakeInstall('LIB_ONLY=1')
